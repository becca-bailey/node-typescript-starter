{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "A starter project for Node + Typescript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint":
      "tslint -c tslint.json 'src/**/*.ts' --type-check --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/beccanelson/espark-challenge.git"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "js", "json", "node"]
  },
  "author": "Becca Nelson",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "jest": "^20.0.4",
    "lodash": "^4.17.4",
    "ts-jest": "^22.4.6",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  }
}
